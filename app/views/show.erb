<h1><%= @robot.name %></h1>
<img src="https://robohash.org/<%= @robot.name %>.png">

<p><strong>Location: </strong><%= @robot.city %>, <%= @robot.state %></p>
<p><strong>Department: </strong><%= @robot.department %></p>

<p><a href="/robots/<%= @robot.id %>/edit">Edit Robot</p></a>

<form action="/robots/<%= @robot.id %>" method="POST">
  <input type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete robot"/>
</form>
